<Window x:Class="oop_4.AccountingUnitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тварина" Height="450" Width="400" FontStyle="Italic" FontSize="13">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Ім'я тварини:"  FontStyle="Italic" FontSize="13"/>
            <TextBox x:Name="NameBox" FontStyle="Italic" FontSize="13" PreviewTextInput="TextBox_PreviewTextInput" DataObject.Pasting="TextBox_Pasting"/>

            <TextBlock Text="Вид тварини:" Margin="0,10,0,0" FontStyle="Italic" FontSize="13"/>
            <TextBox x:Name="ViewBox" FontStyle="Italic" FontSize="13" PreviewTextInput="TextBox_PreviewTextInput" DataObject.Pasting="TextBox_Pasting"/>

            <TextBlock Text="Країна походження:" Margin="0,10,0,0" FontStyle="Italic" FontSize="13"/>
            <TextBox x:Name="CountryBox" FontStyle="Italic" FontSize="13" PreviewTextInput="TextBox_PreviewTextInput" DataObject.Pasting="TextBox_Pasting"/>

            <TextBlock Text="Дата народження:" Margin="0,10,0,0" FontStyle="Italic" FontSize="13"/>
            <DatePicker x:Name="BirthdayPicker" FontStyle="Italic" FontSize="13" PreviewTextInput="TextBox_PreviewTextInput" DataObject.Pasting="TextBox_Pasting"/>

            <TextBlock Text="Дата наджодження:" Margin="0,10,0,0" FontStyle="Italic" FontSize="13"/>
            <DatePicker x:Name="ArrivalPicker" FontStyle="Italic" FontSize="13" PreviewTextInput="TextBox_PreviewTextInput" DataObject.Pasting="TextBox_Pasting"/>

            <TextBlock Text="Вартість утримання (₴):" Margin="0,10,0,0" FontStyle="Italic" FontSize="13"/>
            <TextBox x:Name="PriceBox" FontStyle="Italic" FontSize="13" PreviewTextInput="TextBox_PreviewTextInput" DataObject.Pasting="TextBox_Pasting"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="OK" Width="80" Margin="5" Click="Ok_Click" FontStyle="Italic" FontSize="13"/>
                <Button Content="Скасувати" Width="80" Margin="5" Click="Cancel_Click"  FontStyle="Italic" FontSize="13"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
